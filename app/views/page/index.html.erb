<div class="modal fade" id="dimensions-form">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">set grid dimensions</h4>
      </div>
      <div class="modal-body">
        <form>
          Rows (max. 200):&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input class="numeric" id="rows"><br><br>Columns (max. 200):&nbsp;
          <input class="numeric" id="columns"><br><br>
          <button type="button" id="resize-grid" class="btn btn-primary" data-dismiss="modal">submit</button>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="signup-form">
  <div class="modal-dialog modal-sm">
