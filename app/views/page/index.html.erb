      <canvas id="grid" width="950" height="600"></canvas>
  </div>
</div>

<div class="modal fade" id="settings-form">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">game settings</h4>
      </div>
      <div class="modal-body">
        <div id="dimensions-box">
          <h4>Set grid dimensions</h4><br>
          <form>
          Rows: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input class="numeric" id="rows"><br><br>
          Columns:&nbsp;&nbsp;
          <input class="numeric" id="columns"><br><br>
          <button type="button" id="resize-grid" class="btn btn-primary" data-dismiss="modal">submit</button>
          </form><br>
        </div>
      <div id="fps-box"><br>
        <h4>Set animation speed</h4><br>
        <form>
          Frames per second: &nbsp;
          <input class="numeric" id="fps"><br><br>
          <button type="button" id="fps-button" class="btn btn-primary" data-dismiss="modal">submit</button><br><br>
        </form></div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="signup-form">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">make an account</h4>
      </div>
      <div class="modal-body">
        <form>Username:&nbsp;<input id="signup-name"><br>Password:&nbsp;&nbsp;<input id="signup-password" type="password"><br><br>
          <button type="button" id="signup-button" class="btn btn-primary" data-dismiss="modal">sign up</button>
        </form><br>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="login-form">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">log in</h4>
      </div>
      <div class="modal-body">
        <form>Username:&nbsp;<input id="login-name"><br>Password:&nbsp;&nbsp;<input id="login-password" type="password"><br><br>
          <button type="button" id="login-button" class="btn btn-primary" data-dismiss="modal">submit</button>
        </form><br>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="save-form">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">add new game</h4>
      </div>
      <div class="modal-body">
        <form>Game title:&nbsp;<input id="game-title"><br><br>
          <button type="button" id="add-button" class="btn btn-primary" data-dismiss="modal">save game</button>
        </form><br>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="games">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">

      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2>Your games</h2>
        <ul id="games-list" data-dismiss="modal"></ul>
